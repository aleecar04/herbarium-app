<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.HerbariumApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/primary_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>


        <item name="android:colorBackground">@color/light_green</item>
        <item name="colorOnBackground">@color/black</item>

        <!-- Estilo para botones y textos -->
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Estilo para los botones -->
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/primary_green</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
